{"ast":null,"code":"import { ref, computed, onMounted, watch } from \"vue\";\nexport default {\n  setup() {\n    const state = ref('Начальное состояние');\n    const toggleState = () => {\n      state.value = state.value === 'Начальное состояние' ? 'Состояние изменено' : 'Начальное состояние';\n    };\n    const formData = ref('');\n    const errorMessage = ref('');\n    const validateForm = () => {\n      if (formData.value.trim() === '') {\n        errorMessage.value = 'Поле не может быть пустым';\n      } else if (formData.value.length < 5) {\n        errorMessage.value = 'Длинна текста должна быть не меньше 5 символов';\n      } else {\n        errorMessage.value = '';\n        alert('Данные введены корректно');\n      }\n    };\n    const firstName = ref('Валерия');\n    const lastName = ref('Киселёва');\n    const fullName = computed(() => {\n      return `${firstName.value} ${lastName.value}`;\n    });\n    const users = ref([{\n      id: 1,\n      name: 'Роман',\n      age: 29,\n      isActive: true\n    }, {\n      id: 2,\n      name: 'Валерия',\n      age: 35,\n      isActive: false\n    }, {\n      id: 3,\n      name: 'Олег',\n      age: 30,\n      isActive: true\n    }, {\n      id: 4,\n      name: 'Катерина',\n      age: 23,\n      isActive: false\n    }, {\n      id: 5,\n      name: 'Ярослава',\n      age: 15,\n      isActive: true\n    }]);\n    const activeUsers = computed(() => {\n      return users.value.filter(user => user.isActive);\n    });\n    const localData = ref('Локальные данные');\n    const fetchedData = ref(null);\n    onMounted(async () => {\n      try {\n        const response = await fetch('https://jsonplaceholder.typicode.com/posts/1');\n        const data = await response.json();\n        fetchedData.value = data;\n      } catch (error) {\n        console.error('Ошибка при загрузке данных:', error);\n      }\n    });\n    const combinedData = computed(() => {\n      if (fetchedData.value) {\n        return `${localData.value} - ${fetchedData.value.title} (${fetchedData.value.id})`;\n      } else {\n        return `Данные загрузаются...`;\n      }\n    });\n    watch(() => combinedData.value, (newVal, oldVal) => {\n      console.log(`combinedData изменилось с \"${oldVal}\" на \"${newVal}\"`);\n    });\n    watch(() => users.value, (newVal, oldVal) => {\n      console.log('Объект users изменился:', oldVal, '->', newVal);\n    }, {\n      deep: true\n    });\n    const updateUser = () => {\n      users.value[0].age = 544; // Изменяем возраст первого пользователя\n      users.value[1].isActive = true; // Изменяем статус активности второго пользователя\n    };\n    return {\n      state,\n      toggleState,\n      errorMessage,\n      formData,\n      validateForm,\n      fullName,\n      firstName,\n      lastName,\n      users,\n      activeUsers,\n      localData,\n      fetchedData,\n      combinedData,\n      updateUser\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","onMounted","watch","setup","state","toggleState","value","formData","errorMessage","validateForm","trim","length","alert","firstName","lastName","fullName","users","id","name","age","isActive","activeUsers","filter","user","localData","fetchedData","response","fetch","data","json","error","console","combinedData","title","newVal","oldVal","log","deep","updateUser"],"sources":["C:\\Users\\admin\\Desktop\\js-homework\\vue-project-2\\src\\components\\ToggleComponent.vue"],"sourcesContent":["<script>\r\nimport {ref, computed, onMounted, watch} from \"vue\";\r\n\r\nexport default {\r\n  setup(){\r\n    const state = ref ('Начальное состояние');\r\n    const toggleState = () => {\r\n      state.value = state.value === 'Начальное состояние'\r\n          ? 'Состояние изменено'\r\n          : 'Начальное состояние';\r\n  };\r\n    const formData = ref ('');\r\n    const errorMessage = ref ('');\r\n    const validateForm = () => {\r\n      if (formData.value.trim() === ''){\r\n        errorMessage.value = 'Поле не может быть пустым';\r\n      } else if (formData.value.length < 5){\r\n        errorMessage.value = 'Длинна текста должна быть не меньше 5 символов';\r\n      } else {\r\n        errorMessage.value = '';\r\n        alert('Данные введены корректно');\r\n      }\r\n    };\r\n    const firstName = ref('Валерия');\r\n    const lastName = ref('Киселёва');\r\n    const fullName = computed(() =>{\r\n      return `${firstName.value} ${lastName.value}`;\r\n    });\r\n    const users = ref([\r\n      {id: 1, name:'Роман', age:29, isActive: true},\r\n      {id: 2, name:'Валерия', age:35, isActive: false},\r\n      {id: 3, name:'Олег', age:30, isActive: true},\r\n      {id: 4, name:'Катерина', age:23, isActive: false},\r\n      {id: 5, name:'Ярослава', age:15, isActive: true},\r\n    ]);\r\n    const activeUsers = computed(() => {\r\n      return users.value.filter(user => user.isActive);\r\n    });\r\n\r\n\r\n    const localData = ref ('Локальные данные');\r\n    const fetchedData = ref(null);\r\n    onMounted(async () => {\r\n      try {\r\n        const response = await fetch('https://jsonplaceholder.typicode.com/posts/1');\r\n        const data = await response.json();\r\n        fetchedData.value = data;\r\n      } catch (error) {\r\n        console.error('Ошибка при загрузке данных:', error);\r\n      }\r\n    });\r\n       const combinedData = computed(() =>{\r\n         if (fetchedData.value){\r\n           return `${localData.value} - ${fetchedData.value.title} (${fetchedData.value.id})`;\r\n         } else {\r\n           return `Данные загрузаются...`;\r\n         }\r\n       });\r\n    watch(\r\n        () => combinedData.value,\r\n        (newVal, oldVal) => {\r\n          console.log(`combinedData изменилось с \"${oldVal}\" на \"${newVal}\"`);\r\n        }\r\n    );\r\n    watch(\r\n        () => users.value,\r\n        (newVal, oldVal) => {\r\n          console.log('Объект users изменился:', oldVal, '->', newVal);\r\n        },\r\n        { deep: true }\r\n    );\r\n    const updateUser = () => {\r\n      users.value[0].age = 544; // Изменяем возраст первого пользователя\r\n      users.value[1].isActive = true; // Изменяем статус активности второго пользователя\r\n    };\r\n\r\n\r\n\r\n\r\n    return {\r\n      state,\r\n      toggleState,\r\n      errorMessage,\r\n      formData,\r\n      validateForm,\r\n      fullName,\r\n      firstName,\r\n      lastName,\r\n      users,\r\n      activeUsers,\r\n      localData,\r\n      fetchedData,\r\n      combinedData,\r\n      updateUser\r\n    };\r\n  }\r\n};\r\n\r\n</script>\r\n\r\n<template>\r\n<div>\r\n  <button @click=\"toggleState\">Изменить состояние</button>\r\n  <p>Текущее состояние: {{state}}</p>\r\n\r\n  <button @click=\"validateForm\">Проверить данные</button>\r\n  <input type=\"text\" v-model=\"formData\">\r\n  <p v-if=\"errorMessage\" style=\"color: red\">{{errorMessage}}</p>\r\n\r\n  <p>Имя: {{ firstName }}</p>\r\n  <p>Фамилия: {{ lastName }}</p>\r\n  <p>Полное имя: {{ fullName }}</p>\r\n\r\n  <h3>Все пользователи</h3>\r\n  <ul>\r\n    <li v-for=\"user in users\" :key=\"user.id\">\r\n        {{user.name}}({{user.age}} лет) - {{user.isActive ? 'Активен' : 'Неактивен'}}\r\n    </li>\r\n  </ul>\r\n\r\n  <h3>Активные пользователи</h3>\r\n  <ul>\r\n    <li v-for=\"user in activeUsers\" :key=\"user.id\">\r\n    {{user.name}}({{user.age}})\r\n    </li>\r\n  </ul>\r\n\r\n  <p>Локальные данные: {{ localData }}</p>\r\n  <p>Данные из HTTP-запроса: {{ fetchedData?.title || 'Загрузка...' }}</p>\r\n  <p>Комбинированные данные: {{ combinedData }}</p>\r\n</div>\r\n</template>\r\n\r\n<style>\r\n\r\n</style>"],"mappings":"AACA,SAAQA,GAAG,EAAEC,QAAQ,EAAEC,SAAS,EAAEC,KAAK,QAAO,KAAK;AAEnD,eAAe;EACbC,KAAKA,CAAA,EAAE;IACL,MAAMC,KAAI,GAAIL,GAAE,CAAG,qBAAqB,CAAC;IACzC,MAAMM,WAAU,GAAIA,CAAA,KAAM;MACxBD,KAAK,CAACE,KAAI,GAAIF,KAAK,CAACE,KAAI,KAAM,qBAAoB,GAC5C,oBAAmB,GACnB,qBAAqB;IAC/B,CAAC;IACC,MAAMC,QAAO,GAAIR,GAAE,CAAG,EAAE,CAAC;IACzB,MAAMS,YAAW,GAAIT,GAAE,CAAG,EAAE,CAAC;IAC7B,MAAMU,YAAW,GAAIA,CAAA,KA